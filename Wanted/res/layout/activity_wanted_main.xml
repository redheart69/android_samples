<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".WantedMainActivity" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ab_stacked_solid_zeki"
        android:gravity="right|center_vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_content_save" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_content_share" />

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_action_about" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/img_main"
            android:layout_width="226dp"
            android:layout_height="173dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="92dp"
            android:contentDescription="@string/picture"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_frame" />

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/img_main"
            android:layout_alignRight="@+id/img_main"
            android:layout_below="@+id/img_main"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp" >

            <ImageView
                android:id="@+id/img_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />

            <EditText
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:gravity="center"
                android:hint="NO NAME"
                android:singleLine="true"
                android:textColor="#413029"
                android:textSize="28sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_money"
            android:layout_width="255dp"
            android:layout_height="28dp"
            android:layout_alignLeft="@+id/layout_name"
            android:layout_alignRight="@+id/layout_name"
            android:layout_below="@+id/layout_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp" >

            <ImageView
                android:id="@+id/img_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />

            <EditText
                android:id="@+id/label_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:gravity="center"
                android:hint="123,000,000"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#413029"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_ad"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>